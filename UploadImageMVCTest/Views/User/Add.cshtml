@model UploadImageMVCTest.Models.ViewModel.UserAdded

@{
    ViewData["Title"] = "Add user";
}

<h2>Create New User</h2>

<form enctype="multipart/form-data" method="post" asp-action="Add" asp-controller="User">
    <div class="form-group">
        <label asp-for="@Model.Name" class="control-label">Name</label>
        <input type="text" asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Image" class="control-label"></label>
        <div class="custom-file">
            <input asp-for="@Model.Image" class="custom-file-input" id="customFile" />
        </div>
        <span asp-validation-for="@Model.Image" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <div class="d-flex justify-content-start">
            <button  class="btn btn-primary">Create user</button>
        </div>
    </div>
</form>